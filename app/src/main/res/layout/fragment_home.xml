<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hero section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/teal_700"
            app:strokeWidth="1dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:id="@+id/iv_hero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bg_travel_beach" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_message"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_tagline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_tagline"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:paddingTop="4dp" />

                    <TextView
                        android:id="@+id/tv_next_trip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_next_trip_fallback"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:paddingTop="2dp" />
                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/tv_stat_trips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trips"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_stat_trips_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget Used"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_stat_budget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R0"
                        android:textSize="20sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Calendar section (moved up for better prominence) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/calendar_title"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"/>

                <com.kizitonwose.calendar.view.CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cv_dayViewResource="@layout/item_calendar_day"
                    app:cv_monthHeaderResource="@layout/item_calendar_header"/>

                <TextView
                    android:id="@+id/tv_month_indicators"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:textColor='@android:color/darker_gray'
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Trip days this month: 3, 8, 14, 21"/>

                <TextView
                    android:id="@+id/tv_selected_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textColor='@android:color/darker_gray'
                    android:textSize="12sp"
                    tools:text="Selected: 2025-08-29"/>

                <TextView
                    android:id="@+id/tv_next_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:textColor='@android:color/holo_green_dark'
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Next: Paris on 2025-09-02"/>

                <TextView
                    android:id="@+id/tv_calendar_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_trips_on_day"
                    android:visibility="gone"
                    android:paddingTop="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_day_trips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Primary actions: compact 3-column row with icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_plan_trip"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="40dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="@string/home_cta_plan_trip"
                app:icon="@drawable/ic_ms_plan"
                app:iconGravity="textStart"
                app:iconPadding="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_open_gallery"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:minHeight="40dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="@string/home_cta_open_gallery"
                app:icon="@drawable/ic_ms_gallery"
                app:iconGravity="textStart"
                app:iconPadding="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_budget"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:minHeight="40dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="@string/home_cta_view_budget"
                app:icon="@drawable/ic_ms_budget"
                app:iconGravity="textStart"
                app:iconPadding="6dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>