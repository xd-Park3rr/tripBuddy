<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TripBuddy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Keep brand colors consistent; override surfaces for dark -->
        <item name="colorPrimary">@color/tb_ocean</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/tb_sunset</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Dark theme surfaces: black background, light text -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>
</resources>